  body.page-body.login-page.login-form-fall(data-url='http://neon.dev')
    // This is needed when you send requests via Ajax
    script(type='text/javascript').
      var baseurl = '';
    .login-container
      .login-header.login-caret
        .login-content
          a.logo(href='index.html')
            img(src='assets/images/logo@2x.png', width='120', alt='')
          p.description Enter your email, and we will send the reset link.
          // progress bar indicator
          .login-progressbar-indicator
            h3 43%
            span logging in...
      .login-progressbar
        div
      .login-form
        .login-content
          form#form_forgot_password(method='post', role='form')
            .form-forgotpassword-success
              i.entypo-check
              h3 Reset email has been sent.
              p Please check your email, reset password link will expire in 24 hours.
            .form-steps
              #step-1.step.current
                .form-group
                  .input-group
                    .input-group-addon
                      i.entypo-mail
                    input#email.form-control(type='text', name='email', placeholder='Email', data-mask='email', autocomplete='off')
                .form-group
                  button.btn.btn-info.btn-block.btn-login(type='submit')
                    | Complete Registration
                    i.entypo-right-open-mini
          .login-bottom-links
            a.link(href='extra-login.html')
              i.entypo-lock
              | &#x9;&#x9;&#x9;&#x9;&#x9;Return to Login Page
            br
            a(href='#') ToS
            |   - 
            a(href='#') Privacy Policy
