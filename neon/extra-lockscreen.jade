  body.page-body.login-page.is-lockscreen.login-form-fall(data-url='http://neon.dev')
    .login-container
      .login-header
        .login-content
          a.logo(href='#')
            img(src='assets/images/logo@2x.png', alt='', width='100')
          p.description Dear Art Ramadani, enter your password to unlock the screen!
          // progress bar indicator
          .login-progressbar-indicator
            h3 0%
            span logging in...
      .login-form
        .login-content
          form#form_lockscreen(method='post', role='form')
            .form-group.lockscreen-input
              .lockscreen-thumb
                img.img-circle(src='assets/images/lockscreen-user.png')
                .lockscreen-progress-indicator 0%
              .lockscreen-details
                h4 Art Ramadani
                span(data-login-text='logging in...') logged off
            .form-group
              .input-group
                .input-group-addon
                  i.entypo-key
                input#password.form-control(type='password', name='password', placeholder='Password', autocomplete='off')
            .form-group
              button.btn.btn-primary.btn-block.btn-login(type='submit')
                | Login In
                i.entypo-login
          .login-bottom-links
            a.link(href='extra-login.html')
              | Sign in using different account 
              i.entypo-right-open
            br
            a(href='#') ToS
            |   - 
            a(href='#') Privacy Policy
