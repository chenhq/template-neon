  body.page-body.login-page.login-form-fall(data-url='http://neon.dev')
    // This is needed when you send requests via Ajax
    script(type='text/javascript').
      var baseurl = '';
    .login-container
      .login-header.login-caret
        .login-content
          a.logo(href='index.html')
            img(src='assets/images/logo@2x.png', width='120', alt='')
          p.description Create an account, it&apos;s free and takes few moments only!
          // progress bar indicator
          .login-progressbar-indicator
            h3 43%
            span logging in...
      .login-progressbar
        div
      .login-form
        .login-content
          form#form_register(method='post', role='form')
            .form-register-success
              i.entypo-check
              h3 You have been successfully registered.
              p We have emailed you the confirmation link for your account.
            .form-steps
              #step-1.step.current
                .form-group
                  .input-group
                    .input-group-addon
                      i.entypo-user
                    input#name.form-control(type='text', name='name', placeholder='Full Name', autocomplete='off')
                .form-group
                  .input-group
                    .input-group-addon
                      i.entypo-phone
                    input#phone.form-control(type='text', name='phone', placeholder='Phone Number', data-mask='phone', autocomplete='off')
                .form-group
                  .input-group
                    .input-group-addon
                      i.entypo-calendar
                    input#birthdate.form-control(type='text', name='birthdate', placeholder='Date of Birth (DD/MM/YYYY)', data-mask='date', autocomplete='off')
                .form-group
                  button.btn.btn-primary.btn-block.btn-login(type='button', data-step='step-2')
                    | Next Step
                    i.entypo-right-open-mini
                .form-group
                  | Step 1 of 2
              #step-2.step
                .form-group
                  .input-group
                    .input-group-addon
                      i.entypo-user-add
                    input#username.form-control(type='text', name='username', placeholder='Username', data-mask='[a-zA-Z0-1\.]+', data-is-regex='true', autocomplete='off')
                .form-group
                  .input-group
                    .input-group-addon
                      i.entypo-mail
                    input#email.form-control(type='text', name='email', data-mask='email', placeholder='E-mail', autocomplete='off')
                .form-group
                  .input-group
                    .input-group-addon
                      i.entypo-lock
                    input#password.form-control(type='password', name='password', placeholder='Choose Password', autocomplete='off')
                .form-group
                  button.btn.btn-success.btn-block.btn-login(type='submit')
                    | Complete Registration
                    i.entypo-right-open-mini
                .form-group
                  | Step 2 of 2
          .login-bottom-links
            a.link(href='extra-login.html')
              i.entypo-lock
              | &#x9;&#x9;&#x9;&#x9;&#x9;Return to Login Page
